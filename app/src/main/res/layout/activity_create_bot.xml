<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/viewA"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/bot_blue" />

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:text="Create Bot"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:background="@color/transparent"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:id="@+id/imgToolbarCoinGif"
                    android:layout_width="38dp"
                    android:layout_height="38dp" />

                <TextView
                    android:id="@+id/txtCoinsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_above="@+id/cardviewA"
                android:layout_centerHorizontal="true"
                app:cardBackgroundColor="@color/bot_green"
                app:cardCornerRadius="45dp"
                app:cardElevation="10dp"
                app:contentPadding="1dp">

                <ImageView
                    android:id="@+id/imgBotProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_default_add" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardviewA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewA"
                android:layout_marginStart="16dp"
                android:layout_marginTop="-45dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="16dp">

                    <EditText
                        android:id="@+id/edtBotName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="38dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="20dp"
                        android:backgroundTint="@color/gray_e"
                        android:gravity="center"
                        android:hint="Enter bot name"
                        android:inputType="text"
                        android:lines="1"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray_e" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:paddingStart="8dp"
                            android:text="Select bot color"
                            android:textColor="@color/gray_b" />

                        <TextView
                            android:id="@+id/txtSelectedColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:paddingStart="8dp"
                            android:text="Blue"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="16dp"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:id="@+id/rlBlue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp">

                                <RelativeLayout
                                    android:id="@+id/rlC_Blue"
                                    android:layout_width="62dp"
                                    android:layout_height="62dp"
                                    android:background="@drawable/circle_background_f" />

                                <android.support.v7.widget.CardView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    app:cardBackgroundColor="@color/bot_blue"
                                    app:cardCornerRadius="30dp">

                                    <TextView
                                        android:id="@+id/txtBlue"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="Blue"
                                        android:textColor="@color/gray_h"
                                        android:textSize="12sp" />

                                </android.support.v7.widget.CardView>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rlGreen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp">

                                <RelativeLayout
                                    android:id="@+id/rlC_Green"
                                    android:layout_width="62dp"
                                    android:layout_height="62dp"
                                    android:background="@drawable/circle_background_f"
                                    android:visibility="gone" />

                                <android.support.v7.widget.CardView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    app:cardBackgroundColor="@color/bot_green"
                                    app:cardCornerRadius="30dp">

                                    <TextView
                                        android:id="@+id/txtGreen"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="Green"
                                        android:textColor="@color/gray_h"
                                        android:textSize="12sp" />

                                </android.support.v7.widget.CardView>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rlMaroon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp">

                                <RelativeLayout
                                    android:id="@+id/rlC_Maroon"
                                    android:layout_width="62dp"
                                    android:layout_height="62dp"
                                    android:background="@drawable/circle_background_f"
                                    android:visibility="gone" />

                                <android.support.v7.widget.CardView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    app:cardBackgroundColor="@color/bot_maroon"
                                    app:cardCornerRadius="30dp">

                                    <TextView
                                        android:id="@+id/txtMaroon"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="Maroon"
                                        android:textColor="@color/gray_h"
                                        android:textSize="12sp" />

                                </android.support.v7.widget.CardView>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rlOlive"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp">

                                <RelativeLayout
                                    android:id="@+id/rlC_Olive"
                                    android:layout_width="62dp"
                                    android:layout_height="62dp"
                                    android:background="@drawable/circle_background_f"
                                    android:visibility="gone" />

                                <android.support.v7.widget.CardView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    app:cardBackgroundColor="@color/bot_olive"
                                    app:cardCornerRadius="30dp">

                                    <TextView
                                        android:id="@+id/txtOlive"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="Olive"
                                        android:textColor="@color/gray_h"
                                        android:textSize="12sp" />

                                </android.support.v7.widget.CardView>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rlPurple"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp">

                                <RelativeLayout
                                    android:id="@+id/rlC_Purple"
                                    android:layout_width="62dp"
                                    android:layout_height="62dp"
                                    android:background="@drawable/circle_background_f"
                                    android:visibility="gone" />

                                <android.support.v7.widget.CardView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    app:cardBackgroundColor="@color/bot_purple"
                                    app:cardCornerRadius="30dp">

                                    <TextView
                                        android:id="@+id/txtPurple"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="Purple"
                                        android:textColor="@color/gray_h"
                                        android:textSize="12sp" />

                                </android.support.v7.widget.CardView>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rlTeal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp">

                                <RelativeLayout
                                    android:id="@+id/rlC_Teal"
                                    android:layout_width="62dp"
                                    android:layout_height="62dp"
                                    android:background="@drawable/circle_background_f"
                                    android:visibility="gone" />

                                <android.support.v7.widget.CardView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    app:cardBackgroundColor="@color/bot_teal"
                                    app:cardCornerRadius="30dp">

                                    <TextView
                                        android:id="@+id/txtTeal"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="Teal"
                                        android:textColor="@color/gray_h"
                                        android:textSize="12sp" />

                                </android.support.v7.widget.CardView>
                            </RelativeLayout>
                        </LinearLayout>
                    </HorizontalScrollView>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select category:-"
                android:textColor="@color/gray_c" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/layout_bg2"
                android:padding="4dp">

                <Spinner
                    android:id="@+id/spinnerCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/gray_a"
                    android:popupBackground="@color/white" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Select sub-category:-"
                android:textColor="@color/gray_c" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/layout_bg2"
                android:padding="4dp">

                <Spinner
                    android:id="@+id/spinnerSubCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/gray_a"
                    android:popupBackground="@color/white" />
            </RelativeLayout>

            <EditText
                android:id="@+id/edtWeblink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/layout_bg2"
                android:hint="Enter website link"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_d" />

            <EditText
                android:id="@+id/edtBotDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/layout_bg2"
                android:gravity="start"
                android:hint="Enter bot description"
                android:inputType="textMultiLine"
                android:lines="5"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_d" />

            <Button
                android:id="@+id/btnCreateBot"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="16dp"
                android:background="@color/bot_blue"
                android:text="Create" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>