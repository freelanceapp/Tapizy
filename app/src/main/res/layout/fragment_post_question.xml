<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="20dp"
    android:paddingRight="16sp"
    android:paddingBottom="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What is Your Question"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/etQuestion"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="start"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_back_a"
        android:gravity="start"
        android:hint="Enter Your Question Here"
        android:padding="12dp"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_b"
        android:textSize="20sp" />

    <android.support.v7.widget.CardView
        android:id="@+id/cv_post_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="30dp"
        app:cardBackgroundColor="@color/blueB"
        app:cardCornerRadius="6dp">

        <Button
            android:id="@+id/post_submit_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Post Your Question"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>
</LinearLayout>